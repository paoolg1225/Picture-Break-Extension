{
  "manifest_version": 3,
  "name": "Picture Break",
  "version": "1.1",  
  "description": "Shows random pictures of animals based on user-defined intervals.",
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Set your Picture Break!",
    "default_icon": {
      "16": "icons/dog-icon1.png",  
      "48": "icons/dog-icon2.png",
      "128": "icons/dog-icon3.png"
    }
  },
  "icons": {
    "16": "icons/dog-icon1.png",   
    "48": "icons/dog-icon2.png",   
    "128": "icons/dog-icon3.png"   
  },
  "background": {
    "service_worker": "background.js"
  }
}
